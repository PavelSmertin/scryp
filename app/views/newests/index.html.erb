
    <div class="row">
      <div class="col-sm-10 main_header">
        <div class="main_header_center">
          <%= link_to 'ADD EVENT', new_newest_path, :class => "btn btn-outline-primary btn_add" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col">
        <p id="notice"><%= notice %></p>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-4 position-relative">
        <%= render 'form_filters' %>
      </div>

      <div class="col-sm-6">
        <div class="card">
          <div class="card-header">
            <%= render 'form_search' %>
          </div>

          <% if !@newests.blank? %>
            <ol class="newest_items list-group list-group-flush">
              <% @newests.each do |newest| %>
                <li class="newest_item list-group-item">
                  <div class="newest">
                    <div class="newest_item_header">

                      <a class="user_block" href="#">
                        <%= image_tag('ava_bis.jpg', :class => "avatar") %>
                        <span class="username">Otto Fon</span>
                      </a>

                      <div class="d-flex flex-row">

                          <div class="mr-auto">
                            <a class="coin_block" href="#">
                              <img class="logo_coin" src="<%= !newest.nil? ? "media/coin/logo/#{newest.coin_id}/#{newest.logo}" : '' %>" alt="">

                              <span class="coinname"><%= !newest.nil? ? newest.full_name : '' %></span>
                              <span class="newest_timestamp" title="5:40 PM - 8 Nov 2017">
                                <span class="_timestamp" data-time="1510141252"><%= time_ago_in_words(newest.created_at) %></span>
                              </span>
                            </a>
                          </div>
                          <div class="">
                            <span class="category_tag"><%= !newest.nil? ? "##{newest.name}" : '' %></span>
                          </div>
                          <div class="">
                            <span class="newest_butter_menu action_button">
                              <i class="fa fa-ellipsis-v"></i>
                            </span>
                          </div>

                      </div>
                    </div>
              

                    <p class="newest_text">
                      <span class="event_header"><%= !newest.nil? && !newest.start_time.nil? ? newest.start_time.strftime("%d %h %Y") : '' %></span> 
                      <span class="event_header"><%= !newest.nil? && !newest.end_time.nil? ? ' - '+ newest.end_time.strftime("%d %h %Y") : '' %></span> 
                      <%= newest.text %>
                      <br>
                      <a href="<%= newest.link %>" rel="nofollow" ><%= newest.link %></a>
                    </p>

                    <div class="feed_image">
                       <%= image_tag(newest.image_url, :class => "img-fluid") if !newest.image_url.nil? %>
                    </div>
                
                    <div>

                      <div class="newest_item_footer">
                        <button class="action_button">
                          <div class="icon_container" title="Date">
                            <span class="icon_date"></span>
                            <span class = "action_button_label">Date</span>
                          </div>
                        </button>

                        <div class="action_list">
                          <button class="text-danger action_button">
                            23 positive
                          </button>
                          <button class="text-success action_button">
                            2 negative
                          </button>
                        </div>

                        <button class="action_button">
                          <div class="icon_container" title="Share">
                            <span class="icon_share"></span>
                            <span class = "action_button_label">Share</span>
                          </div>
                        </button>
                      </div>
                    </div>
                  </div>
                </li>
              <% end %>
            </ol>
          <% else %>
            <p class="empty_case">Ничего не найдено</p>
          <% end %>
        </div>
      </div>

      <div class="col-sm-2">
        <div class="card mb-3">
          <div class="card-header">
            ...
          </div>
          <div class="card-body">
          </div>
        </div>
      </div>
    </div>


